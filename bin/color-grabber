#! /usr/bin/env ruby
require 'optparse'
require 'kuler-export'

options = {sass: false, verbose: false}
OptionParser.new do |opts|
  opts.banner = "Usage: color-grabber [options] slug1 slug2 slugN"
  opts.on("
  opts.on("-f", "--format", "format, one of 'sass, css, text'") do |s|
    options[:format] = s
  end
  opts.on("-v", "--verbose", "Run verbosely") do |v|
    options[:verbose] = true
  end
end.parse!

ARGV.each do |slug|
  ke = KulerExport.new(slug, verbose:options[:verbose])
  puts "# #{slug}"
  if options[:format] = 'scss'
    puts ke.to_sass
  else
    puts ke.to_s
  end
  puts "## end #{slug}"
end

